<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.QuestionActivity"
    android:screenReaderFocusable="true">

    <TextView
        android:id="@+id/titleQuestiontextView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answerOnetextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:onClick="validateAnswerOne"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleQuestiontextView" />

    <TextView
        android:id="@+id/answerTwotextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:onClick="validateAnswerTwo"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/answerOnetextView"
        app:layout_constraintTop_toBottomOf="@+id/titleQuestiontextView" />

    <TextView
        android:id="@+id/answerThreetextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:onClick="validateAnswerThree"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAnswer1" />

    <TextView
        android:id="@+id/answerFourtextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:onClick="validateAnswerFour"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/answerThreetextView"
        app:layout_constraintTop_toBottomOf="@+id/imageAnswer2" />

    <ImageView
        android:id="@+id/imageAnswer1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerOnetextView"
        app:srcCompat="@drawable/logo100x100"
        tools:srcCompat="@drawable/logo100x100" />

    <ImageView
        android:id="@+id/imageAnswer3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerThreetextView"
        app:srcCompat="@drawable/logo100x100"
        tools:srcCompat="@drawable/logo100x100" />

    <ImageView
        android:id="@+id/imageAnswer4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/imageAnswer3"
        app:layout_constraintTop_toBottomOf="@+id/answerFourtextView"
        app:srcCompat="@drawable/logo100x100"
        tools:srcCompat="@drawable/logo100x100" />

    <ImageView
        android:id="@+id/imageAnswer2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/imageAnswer1"
        app:layout_constraintTop_toBottomOf="@+id/answerTwotextView"
        app:srcCompat="@drawable/logo100x100"
        tools:srcCompat="@drawable/logo100x100" />

</androidx.constraintlayout.widget.ConstraintLayout>