<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.NarrationActivity">

    <TextView
        android:id="@+id/titleStation"
        android:layout_width="327dp"
        android:layout_height="352dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStartQuestions"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="Si, Continuar"
        android:onClick="cambiarActivity"
        android:textColor="@color/fondoAPP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionToStartTextView" />

    <Button
        android:id="@+id/buttonRepeatNarration"
        android:layout_width="198dp"
        android:layout_height="43dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="No, repetir narracion"
        android:textColor="@color/fondoAPP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartQuestions" />

    <TextView
        android:id="@+id/questionToStartTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:text="Â¿Listo para responder las preguntas?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleStation" />

</androidx.constraintlayout.widget.ConstraintLayout>